<!-- app/views/tasks/new.html.erb -->
<h1>New Task</h1>

<%= form_with(model: @task, url: tasks_path, method: :post) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %><br>

  <%= form.label :details %>
  <%= form.text_area :details %><br>

  <%= form.label :completed %>
  <%= form.check_box :completed %><br>

  <%= form.submit %>
<% end %>
